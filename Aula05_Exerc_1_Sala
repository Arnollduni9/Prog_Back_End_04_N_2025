<?php
// Se o formulário for enviado
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $nome = $_POST["nome"];
    $data = $_POST["data"];
    $av1 = floatval($_POST["av1"]);
    $av2 = floatval($_POST["av2"]);

    $media = ($av1 + $av2) / 2;

    echo "<h2>Dados Recebidos:</h2>";
    echo "Nome: " . htmlspecialchars($nome) . "<br>";
    echo "Data: " . htmlspecialchars($data) . "<br>";
    echo "AV1: " . $av1 . "<br>";
    echo "AV2: " . $av2 . "<br>";
    echo "<strong>Média: " . number_format($media, 2, ",", ".") . "</strong>";
}
?>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Formulário de Notas</title>
</head>
<body>
    <h1>Formulário de Notas</h1>
    <form method="post" action="">
        Nome: <input type="text" name="nome" required><br><br>
        Data: <input type="date" name="data" required><br><br>
        AV1: <input type="number" step="0.01" name="av1" required><br><br>
        AV2: <input type="number" step="0.01" name="av2" required><br><br>
        <input type="submit" value="Enviar">
    </form>
</body>
</html>
